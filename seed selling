  <script>
    const seedsData = [
      {
        name: 'Nigerian Rice Seeds',
        description: 'Nigerian Rice Seeds are known for their high yields and low cost. They are widely used in agriculture and are considered to be the most reliable and environmentally friendly seeds.',
        crop: 'rice',
        pesticides: ['Dinotefuran', 'Pymetrozine', 'GreenLeaf Hopper(GLH)'],
        suggestions: ['Proper irrigation is crucial for rice cultivation.', 'Choose suitable rice variety based on soil type.'],
      },
      {
        name: 'Sunflower Seeds',
        description: 'Sunflower seeds are widely used in agriculture and are considered to be the most reliable and environmentally friendly seeds.',
        crop: 'sunflower',
        pesticides: ['Herbicides', 'Neem oil', 'Sandovit (or) Teepal'],
        suggestions: ['Plant sunflowers in full sun for better growth.', 'Harvest sunflower seeds after they turn brown.'],
      },
      {
        name: 'Wheat Seeds',
        description: 'Wheat seeds are widely used in agriculture and are considered to be the most reliable and environmentally friendly seeds.',
        crop: 'wheat',
        pesticides: ['Organochlorines', 'Organophosphates', 'Synthetic Pythroids'],
        suggestions: ['Wheat requires well-drained soil.', 'Fertilize wheat at the right growth stages.'],
      },
      {
      name: 'Carrot',
      description: 'Carrots are a popular root vegetable known for their bright color and nutritional benefits.',
      crop: 'carrot',
      pesticides: ['Diazinon','Pendimethalin','Metalaxyl/Mefenoxam'],
      suggestions: ['Sow carrot seeds in loose, well-prepared soil.', 'Thin out carrot seedlings for proper spacing.'],
      },
      {
      name: 'Corn Seeds',
      description: 'Corn seeds are a staple crop known for their versatility and nutritional value.',
      crop: 'corn',
      pesticides: ['LAMBDA-CYHALOTHRIN ','Glyphosate','Emamectin Benzoate'],
      suggestions: ['Plant corn in blocks for proper pollination.', 'Harvest corn when the kernels are fully developed.'],
      },
     
      // Add more seed data here
    ];

    function displaySeeds(seeds) {
      const seedList = document.getElementById('seedList');
      seedList.innerHTML = '';

      seeds.forEach(seed => {
        const listItem = document.createElement('li');
        listItem.innerHTML = `
          <h4>${seed.name}</h4>
          <p>${seed.description}</p>
          <a href="#">Buy Now</a>
        `;
        seedList.appendChild(listItem);
      });
    }

    function displayPesticides(pesticides) {
      const pesticideList = document.getElementById('pesticideList');
      pesticideList.innerHTML = '';

      pesticides.forEach(pesticide => {
        const listItem = document.createElement('li');
        listItem.textContent = pesticide;
        pesticideList.appendChild(listItem);
      });
    }

    function displaySuggestions(suggestions) {
      const suggestionsList = document.getElementById('suggestionsList');
      suggestionsList.innerHTML = '';

      suggestions.forEach(suggestion => {
        const listItem = document.createElement('li');
        listItem.textContent = suggestion;
        suggestionsList.appendChild(listItem);
      });
    }

    function searchSeeds() {
      const searchTerm = document.getElementById('seedInput').value.trim().toLowerCase();
      const matchedSeeds = seedsData.filter(seed => seed.crop.toLowerCase() === searchTerm);

      if (matchedSeeds.length > 0) {
        displaySeeds(matchedSeeds);
        displayPesticides(matchedSeeds[0].pesticides);
        displaySuggestions(matchedSeeds[0].suggestions);
      } else {
        const seedList = document.getElementById('seedList');
        const pesticideList = document.getElementById('pesticideList');
        const suggestionsList = document.getElementById('suggestionsList');
        seedList.innerHTML = '';
        pesticideList.innerHTML = '';
        suggestionsList.innerHTML = '';
      }
    }

    // Initial display of all seeds
  displaySeeds(seedsData);
  </script>
